/* Modern Navigation Styles */

.modern-navbar {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%) !important;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  transition: all var(--transition-base);
  z-index: 1050;
}

.modern-navbar .navbar-brand-container {
  position: relative;
}

.modern-brand {
  font-family: var(--font-display);
  font-weight: 700;
  text-decoration: none !important;
  color: white !important;
  padding: var(--space-2) 0;
  cursor: pointer;
}

.modern-brand:hover {
  color: rgba(255, 255, 255, 0.9) !important;
}

.brand-icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, var(--brand-primary, #2563eb), var(--brand-secondary, #7c3aed));
  border-radius: var(--radius-lg, 12px);
  box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.1));
}

.brand-emoji {
  font-size: 1.5rem;
  position: relative;
  z-index: 2;
}

.brand-pulse {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--radius-lg, 12px);
  background: linear-gradient(135deg, var(--brand-primary, #2563eb), var(--brand-secondary, #7c3aed));
  opacity: 0.6;
  animation: pulse-brand 2s infinite;
}

@keyframes pulse-brand {
  0%, 100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.8;
  }
}

.brand-text {
  display: flex;
  flex-direction: column;
}

.brand-title {
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.2;
  color: white;
}

.brand-subtitle {
  font-size: 0.75rem;
  font-weight: 400;
  opacity: 0.8;
  color: rgba(255, 255, 255, 0.8);
}

/* Navigation Links */
.modern-nav-link {
  position: relative;
  display: flex !important;
  align-items: center;
  gap: 8px;
  padding: 12px 16px !important;
  border-radius: var(--radius-md, 8px);
  transition: all 0.2s ease;
  color: rgba(255, 255, 255, 0.9) !important;
  font-weight: 500;
  margin: 0 4px;
}

.modern-nav-link:hover {
  background: rgba(255, 255, 255, 0.1);
  color: white !important;
  transform: translateY(-1px);
}

.modern-nav-link.active {
  background: rgba(37, 99, 235, 0.2);
  color: white !important;
}

.nav-icon {
  font-size: 1.1rem;
  min-width: 20px;
}

.nav-text {
  font-size: 0.95rem;
}

.nav-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 2px;
  background: var(--brand-primary, #2563eb);
  border-radius: 1px;
}

/* Dropdown Styles */
.modern-dropdown .dropdown-toggle {
  position: relative;
  display: flex !important;
  align-items: center;
  gap: 8px;
  padding: 12px 16px !important;
  border-radius: var(--radius-md, 8px);
  transition: all 0.2s ease;
  color: rgba(255, 255, 255, 0.9) !important;
  font-weight: 500;
  margin: 0 4px;
  border: none;
  background: none;
}

.modern-dropdown .dropdown-toggle:hover,
.modern-dropdown .dropdown-toggle:focus {
  background: rgba(255, 255, 255, 0.1);
  color: white !important;
  transform: translateY(-1px);
}

.modern-dropdown .dropdown-toggle::after {
  margin-left: auto;
  transition: transform 0.2s ease;
}

.modern-dropdown.show .dropdown-toggle::after {
  transform: rotate(180deg);
}

.modern-dropdown-title {
  display: flex;
  align-items: center;
  gap: 8px;
}

.agent-count-badge {
  font-size: 0.7rem;
  padding: 2px 6px;
}

/* Dropdown Menu */
.modern-dropdown .dropdown-menu {
  background: rgba(30, 41, 59, 0.95);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg, 12px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  padding: 12px;
  margin-top: 8px;
  min-width: 280px;
}

.dropdown-section {
  margin-bottom: 8px;
}

.dropdown-section:last-child {
  margin-bottom: 0;
}

.modern-dropdown-header {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  font-size: 0.8rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border: none;
  background: none;
}

.section-icon {
  font-size: 1rem;
}

.modern-dropdown-item {
  padding: 0 !important;
  border-radius: var(--radius-md, 8px);
  margin-bottom: 4px;
  background: none !important;
  border: none !important;
}

.modern-dropdown-item:last-child {
  margin-bottom: 0;
}

.modern-dropdown-item .dropdown-item {
  padding: 12px;
  border-radius: var(--radius-md, 8px);
  background: none;
  border: none;
  color: rgba(255, 255, 255, 0.9);
  transition: all 0.2s ease;
}

.modern-dropdown-item .dropdown-item:hover {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  transform: translateX(4px);
}

.item-content {
  display: flex;
  align-items: center;
  gap: 12px;
}

.item-icon {
  font-size: 1.1rem;
  min-width: 20px;
}

.item-details {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item-title {
  font-weight: 500;
  font-size: 0.9rem;
  line-height: 1.2;
}

.item-description {
  font-size: 0.75rem;
  opacity: 0.7;
  line-height: 1.2;
}

.item-badge {
  font-size: 0.65rem;
  padding: 2px 6px;
}

.modern-divider {
  border-color: rgba(255, 255, 255, 0.1);
  margin: 8px 0;
}

/* Right side controls */
.nav-controls {
  display: flex;
  align-items: center;
  gap: 12px;
}

.theme-toggle-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.1);
  color: white;
  transition: all 0.2s ease;
  padding: 0;
}

.theme-toggle-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.theme-icon {
  font-size: 1.1rem;
}

.notification-container {
  position: relative;
}

.notification-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.1);
  color: white;
  transition: all 0.2s ease;
  padding: 0;
}

.notification-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.notification-icon {
  font-size: 1.1rem;
}

.notification-badge {
  font-size: 0.7rem;
  padding: 2px 6px;
  min-width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-profile {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 4px 8px;
  border-radius: var(--radius-lg, 12px);
  transition: all 0.2s ease;
}

.user-profile:hover {
  background: rgba(255, 255, 255, 0.1);
}

.profile-name {
  font-size: 0.9rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}

/* Mobile responsiveness */
@media (max-width: 991.98px) {
  .modern-navbar .navbar-collapse {
    background: rgba(30, 41, 59, 0.98);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg, 12px);
    margin-top: 16px;
    padding: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-controls {
    flex-direction: column;
    align-items: stretch;
    gap: 8px;
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .user-profile {
    justify-content: center;
  }

  .modern-dropdown .dropdown-menu {
    position: static !important;
    transform: none !important;
    box-shadow: none;
    border: none;
    background: rgba(255, 255, 255, 0.05);
    margin-top: 8px;
  }
}

/* Dark theme adjustments */
[data-theme="dark"] .modern-navbar {
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%) !important;
}

[data-theme="light"] .modern-navbar {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%) !important;
  border-bottom-color: rgba(0, 0, 0, 0.1);
}

[data-theme="light"] .modern-brand,
[data-theme="light"] .modern-nav-link,
[data-theme="light"] .modern-dropdown .dropdown-toggle,
[data-theme="light"] .profile-name {
  color: rgba(0, 0, 0, 0.9) !important;
}

[data-theme="light"] .modern-nav-link:hover,
[data-theme="light"] .modern-dropdown .dropdown-toggle:hover {
  background: rgba(0, 0, 0, 0.1);
  color: black !important;
}

[data-theme="light"] .theme-toggle-btn,
[data-theme="light"] .notification-btn {
  border-color: rgba(0, 0, 0, 0.2);
  background: rgba(0, 0, 0, 0.1);
  color: black;
}

[data-theme="light"] .theme-toggle-btn:hover,
[data-theme="light"] .notification-btn:hover {
  background: rgba(0, 0, 0, 0.2);
  border-color: rgba(0, 0, 0, 0.3);
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .brand-pulse {
    animation: none;
  }

  .modern-nav-link,
  .theme-toggle-btn,
  .notification-icon,
  .user-profile {
    transition: none;
  }
}

/* Focus indicators */
.modern-nav-link:focus,
.theme-toggle-btn:focus,
.notification-icon:focus,
.user-profile:focus {
  outline: 2px solid var(--brand-primary);
  outline-offset: 2px;
}
